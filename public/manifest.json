{
    "manifest_version": 2,
    "name": "Rescript Chrome Extension Sample",
    "version": "0.0.1",
    "author": "ym <hi@yaomiao.wang>",
    "description": "",
    "background": {
        "scripts": ["dist/background.js", "hot-reload.js"]
    },
    "browser_action": {
        "default_title": "Rescript Chrome Extension Sample",
        "default_popup": "popup.html"
    },
    "content_scripts": [
        {
            "matches": ["https://*/*"],
            "js": ["dist/content.js"],
            "run_at": "document_end"
        }
    ]
}